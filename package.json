{
  "name": "la-station-app",
  "version": "1.0.0",
  "description": "A modular Discord bot with a web interface",
  "author": "Jordan.olv",
  "type": "module",
  "main": "dist/bot/app.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "pm2 start dist/bot/app.js --name la-station",
    "mg": "concurrently \"ts-node src/database/scripts/updateGuilds.ts\" \"ts-node src/database/scripts/updateUsers.ts\"",
    "watch": "nodemon --exec ts-node src/bot/app.ts",
    "dev:front": "cd src/frontend && npm run dev",
    "dev:bot": "tsc-watch --onSuccess \"tsx dist/bot/app.js\"",
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:bot\""
  },
  "keywords": [
    "discord",
    "bot",
    "typescript",
    "modular"
  ],
  "dependencies": {
    "@auth/core": "^0.39.1",
    "@discordjs/builders": "^1.6.5",
    "@discordjs/rest": "^2.0.1",
    "@hono/auth-js": "^1.0.15",
    "@hono/node-server": "^1.14.1",
    "@types/cron": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@vueuse/core": "^13.1.0",
    "axios": "^1.8.4",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "cron": "^4.1.4",
    "date-fns-tz": "^3.2.0",
    "discord-oauth2": "^2.12.1",
    "discord.js": "^14.13.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.2",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pinia": "^3.0.2",
    "serve": "^14.2.4",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "nodemon": "^3.0.1",
    "tsc-alias": "^1.8.15",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.2.2"
  }
}
